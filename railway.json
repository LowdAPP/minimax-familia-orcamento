{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfile": "./Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "readiness": {
        "path": "/health",
        "method": "GET",
        "timeout": 10000,
        "interval": 3000,
        "initialDelay": 5000
      }
    }
  }
}
